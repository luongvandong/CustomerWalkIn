<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/dimen_8dp"
                tools:context="katana.customerwalkin.feature.SelectEmployeesFragment">

  <katana.customerwalkin.utils.widget.ExRecyclerView
      android:id="@+id/rcvSelectEmployee"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/linearBtn">
  </katana.customerwalkin.utils.widget.ExRecyclerView>

  <LinearLayout
      android:id="@+id/linearBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:paddingLeft="@dimen/dimen_18dp"
        android:paddingRight="@dimen/dimen_18dp"
        android:text="@string/go_back"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_18sp"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:clickable="false"
        android:paddingLeft="@dimen/dimen_18dp"
        android:paddingRight="@dimen/dimen_18dp"
        android:text="@string/next_select_service"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_18sp"/>
  </LinearLayout>
</RelativeLayout>
